#-------------------
# ls aliases 
# -p : slash for dir
# -h : human readable units
# -F : * after executables, | after pipes, @ after symlinks
# -C : Force multi-column output
#-------------------
alias ls='ls -C --color=auto --group-directories-first'
alias ll='ls -lphF'
alias l='ls -lph'
alias la='ll -A'
alias lsa='la'
alias lsR='lsa -R'
alias lst='lsa -t'  
alias lsart='lst -r'  
alias lsm='lsart | more'
alias dir='lsa --format=vertical'
alias vdir='lsa --format=long'
#-------------------
# dir aliases
#-------------------
alias ..='cd ..'
alias mkdir='mkdir -p'
#-------------------
# file system aliases
#-------------------
alias h='history'
alias which='type -a'
alias du='du -hk'
alias df='df -hTk'
alias path='echo -e ${PATH//:/\\n}'
alias clc='clear'
alias q='exit'
